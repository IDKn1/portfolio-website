---
import BaseLayout from '../layouts/base.astro';
---

<BaseLayout title="Contact">
    <div class="content">
        <h1>Get in touch</h1>
        <form action="https://formsubmit.co/el/mexoxi" target="_self" method="post">
            <div class="form_name">
                <label for="name">Name</label>
                <input type="text" name="name" required>
            </div>
            <div class="form_email">
                <label for="email">Email</label>
                <input type="email" name="email" placeholder="name@email.com" required>
            </div>
            <div class="form_message">
                <label for="message">Message</label>
                <textarea name="message" rows="8" placeholder="" required></textarea>
            </div>
            <input type="hidden" name="_next" value="https://n-s.work/thanks.html">
            <button type="submit">Send</button>
        </form>
    </div>
</BaseLayout>

<style>
        
        form {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            max-width: 60ch;
        }
        .form_name, .form_email, .form_message {
            display: flex;
            flex-direction: column;
            padding-block: 0.5rem;
        }
        .form_email {
            grid-column: 2/3;
        }
        .form_message {
            grid-column: 1/3;
        }
        
        input, textarea, button {
            border-radius: 0;
            border: 0;
	        outline: none;
	        -webkit-appearance: none;
	        -moz-appearance: none;
	        appearance: none;
            font-family: inherit;
        }

        input {
            border-bottom: var(--text-clr) 1px solid;
        }

        textarea {
            border: var(--text-clr) 1px solid;
        }

        button {
            background: var(--primary-clr);
            color: var(--bg-clr);
            padding: 0.5rem 1rem;
        }

        input:focus,
        textarea:focus {
            transition: border 0.2s ease-in-out;
            border: 0.1rem solid var(--primary-color);
        }

        input:-webkit-autofill,
        input:-webkit-autofill:focus {
            /* Autofill styling */
            -webkit-box-shadow: 0 0 0px 40rem var(--dark-gray) inset;
            transition: border 0.4s ease-in-out;
        }

        button:hover, button:focus {
            background-color: var(--primary-clr);
            color: var(--secondary-color);
            cursor: pointer;
        }
</style>