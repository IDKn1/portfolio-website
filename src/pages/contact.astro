---
import BaseLayout from "../layouts/base.astro";
---

<BaseLayout title="Contact">
  <div class="form-wrapper">
    <div class="content">
      <h1>Get in touch</h1>
      <form
        action="https://api.web3forms.com/submit"
        target="_self"
        method="post"
        role="form"
        aria-label="Contact form"
        novalidate
      >
        <input
          type="hidden"
          name="access_key"
          value="23377c9f-4220-4e1d-9f68-b9710aa82e54"
        />
        <div class="form_name">
          <label for="name">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            required
            aria-required="true"
            aria-invalid="false"
          />
        </div>
        <div class="form_email">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="name@email.com"
            required
            aria-required="true"
            aria-describedby="email-error"
            aria-invalid="false"
          />
          <span id="email-error" class="error-message" aria-live="polite"
          ></span>
        </div>
        <div class="form_message">
          <label for="message">Message</label>
          <textarea
            id="message"
            name="message"
            rows="8"
            placeholder=""
            required
            aria-required="true"
            aria-invalid="false"></textarea>
        </div>
      </form>
      <!-- Honeypot Spam Protection -->
      <input
        type="checkbox"
        name="botcheck"
        class="hidden"
        style="display: none;"
        tabindex="-1"
        aria-hidden="true"
      />
      <!-- Custom Confirmation / Success Page -->
      <input type="hidden" name="redirect" value="https://n-s.work/thanks/" />
      <button type="submit" aria-describedby="submit-description">
        Send message
      </button>
      <span id="submit-description" class="sr-only">
        Submit your contact form to get in touch
      </span>
    </div>
  </div>
</BaseLayout>

<style>
  form {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 1rem;
    max-width: 60ch;
  }
  .form_name,
  .form_email,
  .form_message {
    display: flex;
    flex-direction: column;
    padding-block: 0.5rem;
  }
  .form_email {
    grid-column: 2/3;
  }
  .form_message {
    grid-column: 1/3;
  }
  input,
  textarea,
  button {
    border-radius: 0;
    border: 0;
    outline: none;
    -webkit-appearance: none;
    -moz-appearance: none;
    appearance: none;
    font-family: inherit;
  }
  input {
    border-bottom: var(--text-clr) 1px solid;
  }
  textarea {
    border: var(--text-clr) 1px solid;
  }
  button {
    background: var(--bg-clr);
    color: var(--primary-clr);
    padding: 0.5rem 0.75rem;
    border: 2px var(--primary-clr) solid;
    transition: color 0.25s ease-in;
  }
  button:hover,
  button:focus {
    background-color: var(--primary-clr);
    color: var(--bg-clr);
    cursor: pointer;
    border: 2px var(--primary-clr) solid;
  }
  .form-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    min-height: 100dvh;
    grid-column: 2/12;
    padding-top: 2rem;
    flex-direction: column;
  }
  .content {
    width: 100%;
    max-width: 60ch;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding-inline: 4rem;
  }
  input,
  input:-webkit-autofill,
  input:-webkit-autofill:hover,
  input:-webkit-autofill:focus,
  input:-webkit-autofill:active,
  textarea {
    -webkit-background-clip: text;
    -webkit-text-fill-color: var(--text-clr);
    transition: background-color 5000s ease-in-out 0s;
    box-shadow: inset 0 0 20px 20px var(--bg-clr);
  }

  /* Accessibility styles */
  .error-message {
    color: #d32f2f;
    font-size: 0.875rem;
    margin-top: 0.25rem;
    min-height: 1.25rem;
  }

  .sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  input[aria-invalid="true"],
  textarea[aria-invalid="true"] {
    border-color: #d32f2f;
  }

  /* Mobile Styles */
  @media (max-width: 850px) {
    .form_name,
    .form_email {
      grid-column: 1/3;
    }

    form {
      gap: 0;
    }

    .form-wrapper {
      grid-column: 1/13;
    }
  }
</style>
