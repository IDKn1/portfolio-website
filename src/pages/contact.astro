---
import BaseLayout from '../layouts/base.astro';
---

<BaseLayout title="Contact">
    <div class="form-wrapper">

        <div class="content">
            <h1>Get in touch</h1>
            <form action="https://api.web3forms.com/submit" target="_self" method="post">
                <input type="hidden" name="access_key" value="23377c9f-4220-4e1d-9f68-b9710aa82e54">
                <div class="form_name">
                    <label for="name">Name</label>
                    <input type="text" name="name" required>
                </div>
                <div class="form_email">
                    <label for="email">Email</label>
                    <input type="email" name="email" placeholder="name@email.com" required>
                </div>
                <div class="form_message">
                    <label for="message">Message</label>
                    <textarea name="message" rows="8" placeholder="" required></textarea>
                </div>
                <!-- Honeypot Spam Protection -->
                <input type="checkbox" name="botcheck" class="hidden" style="display: none;">
                
                <!-- Custom Confirmation / Success Page -->
                <input type="hidden" name="redirect" value="https://n-s.work/thanks/">
                <button type="submit">Send message</button>
            </form>
        </div>
    </div>
</BaseLayout>

<style>
        
        form {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 1rem;
            max-width: 60ch;
        }
        .form_name, .form_email, .form_message {
            display: flex;
            flex-direction: column;
            padding-block: 0.5rem;
        }
        .form_email {
            grid-column: 2/3;
        }
        .form_message {
            grid-column: 1/3;
        }
        
        input, textarea, button {
            border-radius: 0;
            border: 0;
	        outline: none;
	        -webkit-appearance: none;
	        -moz-appearance: none;
	        appearance: none;
            font-family: inherit;
        }

        input {
            border-bottom: var(--text-clr) 1px solid;
        }

        textarea {
            border: var(--text-clr) 1px solid;
        }

        button {
            background: var(--bg-clr);
            color: var(--primary-clr);
            padding: 0.5rem 0.75rem;
            border: 2px var(--primary-clr) solid;
            transition: color 0.25s ease-in;
        }

        button:hover, button:focus {
            background-color: var(--primary-clr);
            color: var(--bg-clr);
            cursor: pointer;
            border: 2px var(--primary-clr) solid;
        }

        .form-wrapper {
  display: flex;
  justify-content: center;
  /* align-items: center; */
  min-height: 70vh; /* or 100vh if you want full screen */
  grid-column: 2/3; /* keep it centered in your layout */
}

.content {
  width: 100%;
  max-width: 60ch;
}


        /* Mobile Styles */
@media (max-width: 800px) {
	.form_name,
	.form_email {
		grid-column: 1/3;
	}
}
</style>