<script>
  import gsap from "gsap";
document.addEventListener("DOMContentLoaded", () => {


// Animate the icon and content (unchanged)
  const icon = document.querySelector(".nav");
  const content = document.querySelector(".content");

  if (icon && content) {
    gsap.set(icon, { yPercent: -100 });
    gsap
      .timeline({
        scrollTrigger: {
          trigger: content,
          start: "top top",
          end: "+=350",
          scrub: true,
        },
      })
      .to(icon, {
        opacity: 1,
        yPercent: 0,
        ease: "power1.out",
      });
  }
})
</script>

