import Contact from "../pages/contact.astro";
---

<footer class="footer">
  <div class="footer-text">
    <div class="bye">
      <h4>That's it for me</h4>
      <h6>Thank you for visiting :)</h6>
    </div>
    <h6 class="footer-logo">Nikolai Suvanto</h6>
  </div>
  <p class="copyright">Â© 2025 Nikolai Suvanto. All rights reserved.</p>
  <!-- <Contact /> -->
</footer>

<style>
  h4 {
    color: var(--bg-clr);
  }

  .footer-logo {
    color: var(--bg-clr);
    font-size: 8rem;
    line-height: 0.8;
  }

  @media (max-width: 850px) {
    .footer-logo {
      font-size: 20vw;
    }
  }

  footer {
    width: 100%;
    height: 40dvh;
    background-color: var(--primary-clr);
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr;
    padding: 1.5rem 2rem;
    grid-column: 1/4;
    z-index: 2;
    align-items: end;
  }
  .copyright {
    /* grid-column: 1/2; */
    font-size: 0.75rem;
    padding: 0;
    grid-column: 4/5;
  }

  .footer-text {
    grid-column: 1/2;
    text-align: left;
    justify-content: space-between;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  @media (max-width: 1200px) {
    .footer-text {
      grid-column: 1/2;
    }
  }

  @media (max-width: 850px) {
    .footer {
      display: flex;
      flex-direction: column-reverse;
      align-items: normal;
    }
  }
</style>
