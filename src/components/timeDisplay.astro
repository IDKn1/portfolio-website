<div class="about-time">
  <p>
    Where am I right now?<br />
    <span id="local-time">Loading...</span><span class="location"> â€”Toronto</span>
  </p>
</div>

<!-- Vanilla JS in Astro (no client:load needed) -->
<script>
  const updateTime = () => {
    const time = new Date().toLocaleString("en-US", {
      timeZone: "America/Toronto",
      hour: "numeric",
      minute: "numeric",
      hour12: true,
    });
    const el = document.getElementById("local-time");
    if (el) el.textContent = time;
  };

  updateTime();
  setInterval(updateTime, 1000);
</script>

<style>
  .about-time {
  border-top: var(--text-clr) 2px solid;
  font-weight: 100;
  line-height: 2rem;
}

.about-time #local-time {
  font-size: 1.5rem;
  color: var(--primary-clr);
  font-weight: 900;
}
</style>
